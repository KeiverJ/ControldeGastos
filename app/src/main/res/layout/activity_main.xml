<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8"
    tools:context=".activities.MainActivity">

    <!-- AppBar con Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_toolbar"
            app:titleTextColor="@android:color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido Principal -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tarjeta de Bienvenida -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tvBienvenida"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â˜€ï¸ Buenos dÃ­as, Keiver"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvFechaHoy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Jueves, 07 de noviembre"
                        android:textSize="14sp"
                        android:textColor="#7F8C8D"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta de Balance Principal -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/gradient_balance"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balance Total"
                        android:textSize="16sp"
                        android:textColor="#E8F4F8"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/tvBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="$0"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-medium" />

                    <!-- Contenedor de Ingresos y Gastos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:weightSum="2">

                        <!-- Ingresos -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:background="@drawable/bg_ingresos"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â†—ï¸ Ingresos"
                                android:textSize="13sp"
                                android:textColor="#D4EDDA"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvTotalIngresos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="$0"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                        <!-- Gastos -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="12dp"
                            android:background="@drawable/bg_gastos"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â†˜ï¸ Gastos"
                                android:textSize="13sp"
                                android:textColor="#F8D7DA"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvTotalGastos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="$0"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- TÃ­tulo de Transacciones -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transacciones Recientes"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-medium" />

            <!-- RecyclerView de Transacciones -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTransacciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="80dp" />

            <!-- Mensaje cuando no hay transacciones -->
            <LinearLayout
                android:id="@+id/tvSinTransacciones"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹"
                    android:textSize="80sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="No hay transacciones"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#7F8C8D"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Presiona el botÃ³n âž• para comenzar"
                    android:textSize="15sp"
                    android:textColor="#95A5A6"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- BotÃ³n Flotante (FAB) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAgregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Agregar transacciÃ³n"
        app:backgroundTint="#5DADE2"
        app:tint="@android:color/white"
        app:elevation="6dp"
        app:borderWidth="0dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>