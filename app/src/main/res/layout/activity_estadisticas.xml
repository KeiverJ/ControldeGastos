        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TÃ­tulo del Mes -->
            <TextView
                android:id="@+id/tvMesActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“… Noviembre 2024"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />

            <!-- Tarjeta: Resumen del Mes -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/gradient_balance"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’° Resumen del Mes"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="16dp" />

                    <!-- Ingresos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="â†—ï¸ Ingresos"
                            android:textSize="15sp"
                            android:textColor="#D4EDDA"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/tvTotalIngresosMes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- Gastos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="â†˜ï¸ Gastos"
                            android:textSize="15sp"
                            android:textColor="#F8D7DA"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/tvTotalGastosMes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- LÃ­nea divisoria -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFFFFF"
                        android:alpha="0.3"
                        android:layout_marginVertical="8dp" />

                    <!-- Balance -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ’µ Balance"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/tvBalanceMes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta: ComparaciÃ³n con Mes Anterior -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“Š ComparaciÃ³n con Mes Anterior"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="16dp" />

                    <!-- Ingresos mes anterior -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#E8F5E9"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Ingresos mes anterior"
                                android:textSize="13sp"
                                android:textColor="#34495E" />

                            <TextView
                                android:id="@+id/tvIngresosMesAnterior"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#27AE60" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvComparacionIngresos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“ˆ +15.5%"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="#27AE60" />

                    </LinearLayout>

                    <!-- Gastos mes anterior -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#FFEBEE"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="4dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Gastos mes anterior"
                                android:textSize="13sp"
                                android:textColor="#34495E" />

                            <TextView
                                android:id="@+id/tvGastosMesAnterior"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#E74C3C" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvComparacionGastos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âœ… -8.2%"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="#27AE60" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta: CategorÃ­a MÃ¡s Gastada -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ† CategorÃ­a MÃ¡s Gastada"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#FFF3E0"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvCategoriaMasGastada"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ” AlimentaciÃ³n"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#E67E22" />

                        <TextView
                            android:id="@+id/tvMontoCategoria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$150,000"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#D35400" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta: Otras EstadÃ­sticas -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ˆ Otras EstadÃ­sticas"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#2C3E50"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="16dp" />

                    <!-- Total de Transacciones -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ“ Total de transacciones"
                            android:textSize="14sp"
                            android:textColor="#34495E" />

                        <TextView
                            android:id="@+id/tvTotalTransacciones"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#5DADE2" />

                    </LinearLayout>

                    <!-- DÃ­as con gastos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ“… DÃ­as con actividad"
                            android:textSize="14sp"
                            android:textColor="#34495E" />

                        <TextView
                            android:id="@+id/tvDiasConGastos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 dÃ­as"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#5DADE2" />

                    </LinearLayout>

                    <!-- Promedio diario -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ’µ Promedio de gasto diario"
                            android:textSize="14sp"
                            android:textColor="#34495E" />

                        <TextView
                            android:id="@+id/tvPromedioDiario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$0"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#5DADE2" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>